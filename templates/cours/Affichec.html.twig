{% extends 'base-back/admin.html.twig' %}

{% block body %}
	<Title>
		{% block title %}categorie
		{% endblock %}
	</Title>


	<body>


		<style>
			.button {
				background-color: white;
				border: none;
				color: white;
				padding: 15px 32px;
				text-align: center;
				text-decoration: none;
				display: inline-block;
				font-size: 16px;
				margin: 4px 2px;
				cursor: pointer;
			}

			.button2 {
				background-color: #008CBA;
			}
			.button3 {
				background-color: #f44336;
			}
			.button4 {
				background-color: #e7e7e7;
				color: black;
			}
			.button5 {
				background-color: #555555;
			}
		</style>


		<center>
			<h1>la liste du cours</h1>
            <td><a href="{{ path('add')}}"><button type="button" class="btn btn-outline-danger"><font size="3pt">{% trans %}Ajouter{% endtrans %}</font></button></a></td>
			<table border="1" class="table table-hover">
				<thead>
					<tr>
						<th>id</th>
						<th>Nom cours</th>
						<th>description</th>
						<th>image</th>
						<th>date et heure</th>
						<th>idCategory</th>
					</tr>
				</thead>
				<tbody>
					{% for c in cours  %}
						<tr>
							<th scope="row">{{ c.idcours }}</th>
							<td>{{ c.nomcours }}</td>
							<td>{{ c.descriptioncours }}</td>
                            <td><img src="{{asset('uploads/') ~ c.imagecours}}"  width="50" height="50"></td> 
							<td>{{ c.dateheure|date }}</td>
							<td>{{ c.idcategory }}</td>

							<td><a href="{{ path('delc',{'idcours': c.idcours}) }}"><button type="button" class="btn btn-outline-danger"><font size="3pt">{% trans %}Delete{% endtrans %}</font></button></a></td>
                            <td><a href="{{ path('c_mod',{'idcours': c.idcours}) }}"><button type="button" class="btn btn-outline-danger"><font size="3pt">{% trans %}Update{% endtrans %}</font></button></a></td>  
                                 
                        </tr>
					
				</tbody>
			
			        {%endfor%}
		</table>
		<div>

			
		</div>
	</body>
</center>
</body>
{% endblock %}
