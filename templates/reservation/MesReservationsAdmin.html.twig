{% extends 'base-back/admin.html.twig' %}
{% block body %}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Listes Des Reservations</h4>

            <p class="card-description">

            </p>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id_res</th>


                        <th>Id_client</th>
                        <th>Id_ticket</th>
                        <th>Quantity</th>
                        <th>DateReservation</th>

                        <th>Delete</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for i in reservations %}
                        <tr>
                            <td>{{ i.idreser }}</td>
                            <td>{{ i.iduser }}</td>
                            <td>{{ i.idticket }}</td>
                            <td>{{ i.Quantity }}</td>
                            <td>{{ i.datereser|date }}</td>

                            <td><a class="btn btn-danger btn-icon-text" href={{ path('deleteAdminReser',{'id': i.idreser}) }}><i class="mdi mdi-delete btn-icon-prepend"></i> </a> </td>








                        </tr>
                    {% endfor %}



                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
{% endblock %}