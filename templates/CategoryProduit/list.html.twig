{% use "bootstrap_4_layout.html.twig" %}

{% extends 'base-back/admin.html.twig' %}
{% block body %}
    <h1>Liste de categories </h1>
    
<center>
    
    <a href="{{ path('category_new')  }}"><button type="button" class="btn btn-outline-danger">
			<font size="3pt">{% trans %}ADD{% endtrans %}</font>
		</button>
	</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nom }}</td>
                <td>
                    {# <a href="{{ path('category_show', {'id': category.id}) }}">show</a> #}
                    <a href="{{ path('category_edit', {'id': category.id}) }}"><button type="button" class="btn btn-outline-danger">
			<font size="3pt">{% trans %}Edit{% endtrans %}</font>
		</button>
	</a>
                    <a href="{{ path('category_delete', {'id': category.id}) }}"> <button type="button" class="btn btn-outline-danger">
			<font size="3pt">{% trans %}Delete{% endtrans %}</font>
		</button>
	</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </center>
    {% endblock %}

